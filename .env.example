# RetailOptimizer Environment Variables
# Copy this file to .env.local and fill in your actual values

# Firebase Configuration
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=retailoptimizer.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=retailoptimizer
VITE_FIREBASE_STORAGE_BUCKET=retailoptimizer.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456
VITE_FIREBASE_MEASUREMENT_ID=G-ABCD123456

# Stripe Configuration
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# API Configuration
VITE_API_BASE_URL=https://api.retailoptimizer.com
VITE_APP_ENV=development

# Analytics and Monitoring
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_SENTRY_DSN=https://your-sentry-dsn

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_STRIPE=true
VITE_ENABLE_NOTIFICATIONS=true